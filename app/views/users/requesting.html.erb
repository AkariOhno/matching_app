<div class="main user-show">
  <div class="container">
    <div class="user">
      <h2 class="user-name"><%= @user.name %></h2>
      <p class="user-email"><%= @user.email %></p>
    </div>

    <div class="user-menus">
      <%= link_to("編集", "/users/#{@user.id}/edit") %>
    </div>
    <div class="index-btn">
      <%= link_to("募集一覧", "/users/#{@user.id}") %>
      <%= link_to("ブックマーク一覧", "/users/#{@user.id}/likes") %>
      <span class="now"><%= link_to("里親申請中一覧", "/users/#{@user.id}/requesting") %></span>
      <%= link_to("里親申し込み一覧", "/users/#{@user.id}/requested") %>
    </div>
    <% @requests.each do |request| %>
    <% post = Post.find_by(id: request.receiver_id) %>
      <div class="posts-index-item">
        <%= image_tag "/post_images/#{post.image_name}", :width => "128", :height => "128" %>
        <span class="names">
          <span class="name"><%= link_to(post.name, "/posts/#{post.id}") %></span>
          <% if post.gender == "オス" %>
            <i class="fas fa-mars gender male"></i>
            <% else %>
            <i class="fas fa-venus gender female"></i>
          <% end %>
        </span>
        <span class="content">送信したコメント：<%= request.content %></span>
      </div>
    <% end %>
  </div>
</div>
