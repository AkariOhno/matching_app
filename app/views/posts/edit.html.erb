<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/posts/#{@post.id}/update", {multipart: true}) do %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <p>画像</p>
          <input name="image" type="file">
          <input name="animal" type="radio" value="犬">犬
          <input name="animal" type="radio" value="猫">猫
          <p>名前</p>
          <input name="name" value="<%= @post.name %>">
          <p>性別</p>
          <input name="gender" type="radio" value="オス">オス
          <input name="gender" type="radio" value="メス">メス
          <p>年齢</p>
          <select name="age">
            <option value="不明">不明</option>
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
            <option value="11">11</option>
            <option value="12">12</option>
            <option value="13">13</option>
            <option value="14">14</option>
            <option value="15">15</option>
            <option value="16">16</option>
            <option value="17">17</option>
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
          </select>歳
          <p>品種</p>
          <input name="breed" value="<%= @post.breed %>">
          <p>コメント</p>
          <textarea name="content"><%= @post.content %></textarea>
          <input type="submit" value="保存">
        </div>
      </div>
    <% end %>
  </div>
</div>
